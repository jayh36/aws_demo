{{>layout/header}}


<body class="bg-dark">
<div id="layoutAuthentication">
    <div id="layoutAuthentication_content">
        <main>
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-7">
                        <div class="card shadow-lg border-0 rounded-lg mt-5">
                            <div class="card-header"><h3 class="text-center font-weight-light my-4">게시글 수정</h3></div>
                            <div class="card-body">
                                <form>
                                    <input type="hidden" class="form-control" id="id" value="{{post.id}}">
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="small mb-1" for="title">제목</label>
                                            <input class="form-control py-4" type="text" id="title" value="{{post.title}}" />
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="small mb-1" for="author">작성자</label>
                                        <input class="form-control py-4" type="text" id="author" value="{{post.author}}" readonly />
                                    </div>
                                    <div class="form-group">
                                        <div class="form-group">
                                            <label class="small mb-1" for="content">내용</label>
                                            <textarea class="form-control py-4" id="content">{{post.content}}</textarea>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="form-group mt-4 mb-0"><a class="btn btn-primary btn-block" href="/">취소</a></div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="form-group mt-4 mb-0"><a class="btn btn-primary btn-block" id="btn-update">수정</a></div>
                                            </div>
                                        </div>
                                        <div class="col-md-4">
                                            <div class="form-group">
                                                <div class="form-group mt-4 mb-0"><a class="btn btn-primary btn-block" id="btn-delete">삭제</a></div>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>
</body>

{{>layout/footer}}